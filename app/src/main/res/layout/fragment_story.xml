<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"></ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_200">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_round_explore"></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/col_white"/>
        <TextView
            android:id="@+id/txt_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:text="国内"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/txt_right"
            android:background="@drawable/shape_tablt_normal"></TextView>

        <TextView
            android:id="@+id/txt_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_tabrt_select"
            android:gravity="center"
            android:text="国际/港澳台"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/txt_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>