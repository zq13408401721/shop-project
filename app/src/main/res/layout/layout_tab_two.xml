<?xml version="1.0" encoding="utf-8"?>
<com.hotel.widget.MyTab xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    app:tab_lt_title="国内"
    app:tab_rt_title="国际/港澳台"
    android:id="@+id/myTab">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/col_white"
        android:layout_marginTop="@dimen/dp_20"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/shape_tab_topround"></View>
    <TextView
        android:id="@+id/txt_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_right"
        android:background="@drawable/shape_tablt_select"></TextView>
    <TextView
        android:id="@+id/txt_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/txt_left"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_tabrt_normal"></TextView>
</com.hotel.widget.MyTab>