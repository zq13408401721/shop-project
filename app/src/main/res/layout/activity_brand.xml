<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_title" android:id="@+id/titles"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_infos"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/titles">
        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/col_gray_line"></ImageView>
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="name"
            android:textSize="20sp"
            android:textColor="@color/col_white"></TextView>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/col_white"
            app:layout_constraintLeft_toLeftOf="@id/txt_name"
            app:layout_constraintRight_toRightOf="@id/txt_name"
            app:layout_constraintTop_toBottomOf="@id/txt_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></View>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/txt_des"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/layout_infos"
        android:padding="15dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text=""/>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/col_gray_line"
        app:layout_constraintTop_toBottomOf="@id/txt_des"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_line"
        app:layout_constraintBottom_toBottomOf="parent"></androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>