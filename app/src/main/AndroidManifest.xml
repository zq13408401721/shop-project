<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shop">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!--获取手机网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--读取sd卡图片-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--SD卡缓存图片-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name=".apps.MyApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.home.activity.GoodHotActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".ui.home.activity.BrandActivity"/>
        <activity android:name=".ui.sort.activity.SortDetailActivity"/>
        <activity android:name=".ui.cart.GoodInfoActivity"/>
        <activity android:name=".ui.login.RegisterActivity"/>
        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".ui.shoping.OrderInfoActivity"/>
        <activity android:name=".ui.shoping.AdressListActivity"/>
        <activity android:name=".ui.shoping.AdressEditorActivity"/>
        <activity android:name="com.wildma.pictureselector.PictureSelectActivity"/>
        <meta-data android:name="android.webkit.WebView.EnableSafeBrowsing" android:value="true"/>
    </application>

</manifest>